<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sensorselector"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/accel_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="changeViewAcc"
            android:text="Accelerator" />

        <TextView
            android:id="@+id/accel_status"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="   Sensor N/A" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/other_but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="changeViewProx"
        android:text="Proximity"/>
        <TextView
            android:id="@+id/prox_status"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="   Sensor N/A" />
        </LinearLayout>

</LinearLayout>